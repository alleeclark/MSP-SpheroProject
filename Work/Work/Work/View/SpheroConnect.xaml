<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Work.View.SpheroConnect">
  <Label Text="{Binding MainText}" VerticalOptions="Center" HorizontalOptions="Center" />
  <StackLayout Padding="10.0">
  <Label Text ="Welcome to Sprehab" VerticalOptions="CenterAndExpand" HorizontalOptions="Center"/>
    <Label x:Name="SpheroName" VerticalOptions="CenterAndExpand" HorizontalOptions="Center"/>
    <Switch Toggled="ConnectionToggle_Toggled" VerticalOptions="Center"/>
  </StackLayout>
</ContentPage>